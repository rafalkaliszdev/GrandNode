@model VendorNavigationModel
@using Grand.Web.Models.Catalog;
@if (Model.Vendors.Count > 0)
{
    <div id="block-vendor-navigation" class="block block-vendor-navigation">
            <h2 class="h5"><strong>@T("Vendors")</strong></h2>
        <div class="viewBox">
            <ul class="list">
                @foreach (var vendor in Model.Vendors)
                {
                    <li><a href="@Url.RouteUrl("Vendor", new { SeName = vendor.SeName })">@vendor.Name</a>
                    </li>
                }
            </ul>            
            @if (Model.TotalVendors > Model.Vendors.Count)
            {
                <div class="view-all btn-group-sm m-1 text-xs-left">
                    <a class="btn btn-success" href="@Url.RouteUrl("VendorList")">@T("Vendors.ViewAll")</a>
                </div>
            }
        </div>
    </div>
}